{
	// Text rendering
	"editor.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji', 'Symbols Nerd Font'",
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	"editor.letterSpacing": 0.2,
	"editor.lineHeight": 19,
	"editor.renderWhitespace": "boundary",
	"terminal.integrated.drawBoldTextInBrightColors": false,
	"terminal.integrated.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji', 'Symbols Nerd Font'",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.letterSpacing": 1,
	"terminal.integrated.lineHeight": 1.15,
	"terminal.integrated.rendererType": "experimentalWebgl",

	// UI
	"breadcrumbs.enabled": false,
	"editor.find.cursorMoveOnType": false,
	"editor.minimap.enabled": false,
	"editor.renderLineHighlight": "all",
	"editor.rulers": [80, 120],
	"editor.showFoldingControls": "always",
	"explorer.openEditors.visible": 0,
	"files.eol": "\n",
	"window.menuBarVisibility": "toggle",
	"workbench.settings.editor": "json",
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 14,
	"workbench.tree.renderIndentGuides": "always",

	// Coloring
	"workbench.colorCustomizations": {
		"[Default Dark+]": {
			"editor.background":              "#121212",
			"terminal.background":            "#121212",
			"editor.foreground":              "#ffffff",
			"terminal.foreground":            "#ffffff",
			"editorSuggestWidget.foreground": "#ffffff",
			"terminal.ansiBlack":             "#121212",
			"terminal.ansiRed":               "#ff714f",
			"terminal.ansiGreen":             "#00d965",
			"terminal.ansiYellow":            "#e0e000",
			"terminal.ansiBlue":              "#7e9df9",
			"terminal.ansiMagenta":           "#ff5de1",
			"terminal.ansiCyan":              "#90cbdb",
			"terminal.ansiWhite":             "#ffffff",
			"terminal.ansiBrightBlack":       "#555555",
			"terminal.ansiBrightRed":         "#ff714f",
			"terminal.ansiBrightGreen":       "#00d965",
			"terminal.ansiBrightYellow":      "#e0e000",
			"terminal.ansiBrightBlue":        "#7e9df9",
			"terminal.ansiBrightMagenta":     "#ff5de1",
			"terminal.ansiBrightCyan":        "#90cbdb",
			"terminal.ansiBrightWhite":       "#ffffff",
			"editor.selectionBackground":     "#3298ff66",
			"terminal.selectionBackground":   "#3298ff66",

			"editorRuler.foreground": "#ffffff22"
		}
	},

	// Online services (@tag:usesOnlineServices)
	// "extensions.autoCheckUpdates": false,
	// "extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"update.mode": "none",
	"workbench.enableExperiments": false,
	"workbench.settings.enableNaturalLanguageSearch": false,

	// Tabulation
	"editor.insertSpaces": false, "editor.tabSize": 4,
	"[python]":     { "editor.insertSpaces": true },
	"[rust]":       { "editor.insertSpaces": true },
	"[css]":        { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[scss]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[html]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[javascript]": { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[json]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[jsonc]":      { "editor.insertSpaces": true, "editor.tabSize": 2 },

	// Editor associations
	"workbench.editorAssociations": [
		{
			"filenamePattern": "*.bin",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.dll",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.exe",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.hex",
			"viewType": "hexEditor.hexedit"
		},
		{
			"viewType": "jupyter.notebook.ipynb",
			"filenamePattern": "*.ipynb"
		}
	],
	
	// Misc
	"editor.suggestSelection": "first",
	"editor.wordBasedSuggestions": false,
	"files.restoreUndoStack": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/.idea": true
	},

	// Extensions

	// Python
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.pythonPath": "/usr/bin/python",

	// Better Align
	"alignment.indentBase": "activeline",

	// Better Comments
	"editor.matchBrackets": "never",
	"better-comments.tags": [
		{ "tag": "!",    "color": "$RED" },
		{ "tag": "?",    "color": "$BLUE" },
		{ "tag": "//",   "color": "$BLACK_BRIGHT", "strikethrough": true },
		{ "tag": "todo", "color": "$YELLOW" },
		{ "tag": "*",    "color": "$GREEN" }
	],

	// Bracket Pair Colorizer
	"bracketPairColorizer.consecutivePairColors": [ "()", "[]", "{}", [ "$GREEN", "$YELLOW", "$BLUE", "$MAGENTA", "$CYAN" ], "$RED" ],
	"bracketPairColorizer.forceIterationColorCycle": true,
	"bracketPairColorizer.scopeLineCSS": [ "borderStyle : none", "backgroundColor: {color}; opacity: .05" ],
	"bracketPairColorizer.highlightActiveScope": true,
	"bracketPairColorizer.showBracketsInRuler": true,
	"bracketPairColorizer.rulerPosition": "Left",

	// Colorize
	"colorize.hide_current_line_decorations": false
}
