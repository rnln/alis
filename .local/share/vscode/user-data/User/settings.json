{
	// Text rendering
	"editor.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji', 'Symbols Nerd Font'",
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	"editor.letterSpacing": 0.2,
	"editor.lineHeight": 19,
	"editor.renderWhitespace": "boundary",
	"terminal.integrated.drawBoldTextInBrightColors": false,
	"terminal.integrated.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji', 'Symbols Nerd Font'",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.letterSpacing": 1,
	"terminal.integrated.lineHeight": 1.15,
	"terminal.integrated.rendererType": "experimentalWebgl",

	// UI
	"breadcrumbs.enabled": false,
	"editor.find.cursorMoveOnType": false,
	"editor.minimap.enabled": false,
	"editor.renderLineHighlight": "all",
	"editor.rulers": [80, 120],
	"editor.showFoldingControls": "always",
	"explorer.openEditors.visible": 0,
	"files.eol": "\n",
	"window.menuBarVisibility": "toggle",
	"workbench.settings.editor": "json",
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 14,
	"workbench.tree.renderIndentGuides": "always",

	// Coloring
	"workbench.colorCustomizations": { "[Default Dark+]": {
		"editor.background":              "$BACKGROUND",
		"terminal.background":            "$BACKGROUND",
		"editor.foreground":              "$FOREGROUND",
		"terminal.foreground":            "$FOREGROUND",
		"editorSuggestWidget.foreground": "$FOREGROUND",
		"terminal.ansiBlack":             "$BLACK",
		"terminal.ansiRed":               "$RED",
		"terminal.ansiGreen":             "$GREEN",
		"terminal.ansiYellow":            "$YELLOW",
		"terminal.ansiBlue":              "$BLUE",
		"terminal.ansiMagenta":           "$MAGENTA",
		"terminal.ansiCyan":              "$CYAN",
		"terminal.ansiWhite":             "$WHITE",
		"terminal.ansiBrightBlack":       "$BLACK_BRIGHT",
		"terminal.ansiBrightRed":         "$RED_BRIGHT",
		"terminal.ansiBrightGreen":       "$GREEN_BRIGHT",
		"terminal.ansiBrightYellow":      "$YELLOW_BRIGHT",
		"terminal.ansiBrightBlue":        "$BLUE_BRIGHT",
		"terminal.ansiBrightMagenta":     "$MAGENTA_BRIGHT",
		"terminal.ansiBrightCyan":        "$CYAN_BRIGHT",
		"terminal.ansiBrightWhite":       "$WHITE_BRIGHT",
		"editor.selectionBackground":     "$BACKGROUND_HIGHLIGHT",
		"terminal.selectionBackground":   "$BACKGROUND_HIGHLIGHT",

		"editorRuler.foreground": "${WHITE}22"
	}},
	"editor.tokenColorCustomizations": { "[Default Dark+]": {
		"textMateRules": [
			{ "scope": "comment", "settings": { "foreground": "${FOREGROUND}7c", "fontStyle": "italic" }}
		]
	}},

	// Online services (@tag:usesOnlineServices)
	// "extensions.autoCheckUpdates": false,
	// "extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"update.mode": "none",
	"workbench.enableExperiments": false,
	"workbench.settings.enableNaturalLanguageSearch": false,

	// Tabulation
	"editor.insertSpaces": false, "editor.tabSize": 4,
	"[html]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[css]":        { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[scss]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[javascript]": { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[json]":       { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[jsonc]":      { "editor.insertSpaces": true, "editor.tabSize": 2 },
	"[python]":     { "editor.insertSpaces": true },
	"[rust]":       { "editor.insertSpaces": true },

	// Editor associations
	"workbench.editorAssociations": [
		{ "filenamePattern": "*.bin",   "viewType": "hexEditor.hexedit" },
		{ "filenamePattern": "*.dll",   "viewType": "hexEditor.hexedit" },
		{ "filenamePattern": "*.exe",   "viewType": "hexEditor.hexedit" },
		{ "filenamePattern": "*.hex",   "viewType": "hexEditor.hexedit" },
		{ "filenamePattern": "*.ipynb", "viewType": "jupyter.notebook.ipynb" }
	],

	// Misc
	"editor.suggestSelection": "first",
	"editor.wordBasedSuggestions": false,
	"files.restoreUndoStack": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/.idea": true
	},

	// * Extensions
	// Python
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.pythonPath": "/usr/bin/python",

	// Better Align
	"alignment.indentBase": "activeline",

	// Better Comments
	"editor.matchBrackets": "never",
	"better-comments.tags": [
		{ "tag": "*",    "color": "${FOREGROUND}7c", "bold": true },
		{ "tag": "//",   "color": "${FOREGROUND}3c" },
		{ "tag": "!",    "color": "${RED}7c" },
		{ "tag": "?",    "color": "${BLUE}7c" },
		{ "tag": "todo", "color": "${YELLOW}7c" }
	],

	// Bracket Pair Colorizer
	"bracketPairColorizer.consecutivePairColors": [ "()", "[]", "{}", [ "$GREEN", "$YELLOW", "$BLUE", "$MAGENTA", "$CYAN" ], "$RED" ],
	"bracketPairColorizer.forceIterationColorCycle": true,
	"bracketPairColorizer.scopeLineCSS": [
		"borderStyle: solid",
		"borderWidth: 1px",
		"borderColor: {color}; opacity: .15",
		"backgroundColor: {color}; opacity: .05"
	],
	"bracketPairColorizer.highlightActiveScope": true,
	"bracketPairColorizer.showBracketsInRuler": true,
	"bracketPairColorizer.rulerPosition": "Left",

	// Colorize
	"colorize.hide_current_line_decorations": false
}
