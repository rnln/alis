{
	// Customizing
	"editor.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji'",
	"terminal.integrated.fontFamily": "'JetBrains Mono', 'Noto Sans Mono', monospace, 'Noto Color Emoji'",
	"editor.fontSize": 13,
	"terminal.integrated.fontSize": 13,
	"editor.letterSpacing": 0.2,
	"terminal.integrated.letterSpacing": 1,
	"editor.lineHeight": 19,
	"terminal.integrated.lineHeight": 1.15,
	"terminal.integrated.rendererType": "experimentalWebgl",
	"editor.fontLigatures": true,
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "boundary",
	"editor.rulers": [80, 120],
	"workbench.tree.renderIndentGuides": "always",
	"editor.minimap.enabled": false,
	"explorer.openEditors.visible": 0,
	"breadcrumbs.enabled": false,
	"editor.find.cursorMoveOnType": false,
	"window.menuBarVisibility": "hidden",
	"files.eol": "\n",
	"terminal.integrated.drawBoldTextInBrightColors": false,
	"workbench.colorCustomizations": {
		"editor.background": "#121212",
		"terminal.background": "#121212",

		"editor.foreground": "#ffffff",
		"terminal.foreground": "#ffffff",
		"editorSuggestWidget.foreground": "#ffffff",

		"editor.selectionBackground": "#3298ff66",
		"terminal.selectionBackground": "#3298ff66",

		"terminal.ansiBlack": "#121212",
		"terminal.ansiRed": "#e25563",
		"terminal.ansiGreen": "#3e9a6f",
		"terminal.ansiYellow": "#d56a11",
		"terminal.ansiBlue": "#3485fd",
		"terminal.ansiMagenta": "#9d7ed5",
		"terminal.ansiCyan": "#0989a3",
		"terminal.ansiWhite": "#ececec",
		"terminal.ansiBrightBlack": "#3a3a3a",
		"terminal.ansiBrightRed": "#ed969e",
		"terminal.ansiBrightGreen": "#87c1a6",
		"terminal.ansiBrightYellow": "#fd933a",
		"terminal.ansiBrightBlue": "#81b4fe",
		"terminal.ansiBrightMagenta": "#cbbbe9",
		"terminal.ansiBrightCyan": "#0dcaf0",
		"terminal.ansiBrightWhite": "#ffffff",

		"editorRuler.foreground": "#ffffff22",
	},
	// @tag:usesOnlineServices
	"extensions.autoUpdate": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"workbench.enableExperiments": false,
	"workbench.settings.enableNaturalLanguageSearch": false,
	// Tabulation
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	// Language specific
	"[python]": {
		"editor.insertSpaces": true
	},
	"[rust]": {
		"editor.insertSpaces": true
	},
	"[css]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[scss]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[html]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[jsonc]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"workbench.editorAssociations": [
		{
			"filenamePattern": "*.bin",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.dll",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.exe",
			"viewType": "hexEditor.hexedit"
		},
		{
			"filenamePattern": "*.hex",
			"viewType": "hexEditor.hexedit"
		},
		{
			"viewType": "jupyter.notebook.ipynb",
			"filenamePattern": "*.ipynb"
		}
	],
	// Python
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.pythonPath": "/usr/bin/python",
	// Misc
	"editor.suggestSelection": "first",
	"editor.wordBasedSuggestions": false,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/.idea": true
	},
	"workbench.startupEditor": "none",
	"workbench.settings.editor": "json",
	"extensions.ignoreRecommendations": true,
	"editor.showFoldingControls": "always",
	"workbench.editor.enablePreview": true,
	"window.zoomLevel": 0
}
